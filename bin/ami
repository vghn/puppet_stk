#!/usr/bin/env bash
# AWS EC2 image tasks

# Load environment
# shellcheck disable=1090
. "$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd -P)/envrc"

# Process arguments
case "${1:-}" in
  create)
    ami_create
    ;;
  clean)
    vgs_aws_ec2_images_purge "${AWS_EC2_IMAGE_PREFIX}_*"
    ;;
  *)
    e_abort "USAGE: ${BASH_SOURCE[0]} [create | clean]"
    ;;
esac
