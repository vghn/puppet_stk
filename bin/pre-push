#!/usr/bin/env bash
# GIT Pre-Push Hook
# @author Vlad Ghinea

# Load environment
# shellcheck disable=1090
. "$(cd "$(dirname "${BASH_SOURCE[0]}")/../../" && pwd -P)/envrc"

# Hooks
e_header 'GIT Pre-Push:'
e_info 'Upload .env'
aws s3 cp "${APPDIR}/.env" "$DOTENV_S3" || true

# Git Push
e_header 'GIT Push:'
